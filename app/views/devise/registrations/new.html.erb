<div class="header-back">
  <%= link_to root_path do %>
    <%= image_tag "https://res.cloudinary.com/dn2p7hun2/image/upload/v1701342794/ubz1svndcbosxqlhqzaq.svg" %>
    <p>retour</p>
  <% end %>
</div>

<div class="empty-container-40"></div>

<h1 class="page-title">Créez votre compte</h1>

<div class="form-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :last_name,
                  autofocus: true,
                  label: 'Nom',
                  error: 'Merci de préciser votre nom de famille' %>
      <%= f.input :first_name,
                  label: 'Prénom',
                  error: 'Merci de préciser votre prénom' %>
      <%= f.input :email,
                  label: 'Email',
                  error: 'Merci de préciser votre email',
                  placeholder: 'user@domain.com',
                  required: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: 'Mot de passe',
                  required: true,
                  error: 'Merci de mettre un mot de passe',
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
<%= f.input :birth_date, label: 'Date de naissance', as: :date,
                         start_year: Date.today.year - 60,
                         end_year: 1923,
                         required: true,
                         error: 'Merci de préciser votre date de naissance' %>
      <%= f.input :city,
                  required: true,
                  as: :search %>
      <%= f.input :photo,
                  required: true,
                  label: "Image de profil" %>

      <%= f.input :user_categories,
           as: :check_boxes,
           collection: Category.all.map { |category| [category.name, category.id] },
           label: 'Choisissez au moins trois catégories :',
           input_html: { class: "tag-selector" },
           item_wrapper_class: 'tag-item' %>

    </div>

    <div class="form-actions button-primary-submit">
      <%= f.button :submit, "Créer le compte" %>
    </div>
  <% end %>
</div>

<div class="empty-container-40"></div>
