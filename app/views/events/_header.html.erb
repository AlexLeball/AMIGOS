<div class="header">
  <div class="profile-header">
    <%= link_to my_profile_path, class: "card-click" do %>
      <img src="https://res.cloudinary.com/dn2p7hun2/image/upload/v1701338864/fsca4rlcmf2bsmk3jbyq.png" alt="">
      <p class="profile-firstname">Bonjour <%= current_user.first_name %></p>
      <img src="https://res.cloudinary.com/dn2p7hun2/image/upload/v1701338744/cdtryazdakrijjpa2wo8.png" alt="" class="emoji">
    <% end %>
<div class="search">
  <div data-controller="search">
    <a href="#" class="search-click" data-action="click->search#toggleSearch">
      <img src="https://res.cloudinary.com/dn2p7hun2/image/upload/v1701339026/rxisl2uvzemnewbifidt.svg" alt="">
    </a>
    <div data-search-target="searchField" class="half-page-search" style="display: none;">
      <!-- Pulsante per chiudere la barra di ricerca -->
      <div class="close-search" style="text-align: right;">
        <a href="#" class="close-click" data-action="click->search#toggleSearch">
          Fermer
        </a>
      </div>
      <%= form_tag(events_path, method: :get) do %>
        <div class="form-group">
          <%= text_field_tag :query, params[:query], placeholder: "Rechercher par nom, ville", class: "form-control" %>
        </div>
        <%= submit_tag "Rechercher", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

  </div>
</div>
