<%= form_for @user, url: update_my_profile_path, method: :patch do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :birth_date %>
  <%= f.date_field :birth_date %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit 'save your changes' %>
<% end %>
